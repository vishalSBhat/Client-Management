<div class="m-4 px-2 py-2 profile">
  <div class="px-2 py-3 profile-container">
    <div class="row mb-3">
      <span
        id="profile-back-button-holder"
        class="mr-auto ml-sm-5 p-2 p-sm-3 round-icon-holder"
        ><img
          class="icon profile-back-button"
          src="/icons/icons/arrow-left.svg"
          alt="Profile"
      /></span>
      <a href="/logout" class="mr-sm-5"
        ><button class="p-2 button">Logout</button></a
      >
    </div>

    <div class="row justify-content-center profile-detail-container">
      <div class="col-12 col-sm-7 px-3 py-4 mx-2 my-3 profile-detail">
        <div class="row mb-2">
          <h3 class="col-5">Name :</h3>
          <h3 class="col-6">
            <%= lawyerDetails.fname %> <%= lawyerDetails.lname %>
          </h3>
        </div>
        <div class="row mb-2">
          <h3 class="col-5">Qualification :</h3>
          <h3 class="col-6"><%= lawyerDetails.qualification %></h3>
        </div>
        <div class="row">
          <h3 class="col-5">No. of registered clients :</h3>
          <h3 class="col-6"><%= lawyerDetails.clientCount %></h3>
        </div>
      </div>

      <div class="col-12 col-sm-7 px-3 py-4 mx-2 my-3 profile-detail">
        <div class="row">
          <h3 class="col-12 mb-1">Address :</h3>
          <h3 class="offset-1 col-10 mt-2"><%= lawyerDetails.address %></h3>
        </div>
      </div>

      <div class="col-12 col-sm-7 px-3 py-4 mx-2 my-3 profile-detail">
        <div class="row mb-2">
          <h3 class="col-3">e-Mail :</h3>
          <h3 class="col-"><%= lawyerDetails.mail %></h3>
        </div>
        <div class="row">
          <h3 class="col-3">ph-No :</h3>
          <h3 class="col-"><%= lawyerDetails.phNo %></h3>
        </div>
      </div>
    </div>
  </div>
</div>
